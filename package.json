{
  "name": "fixed",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "crates/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "bun run --filter \"./crates/*\" build",
    "watch": "bun run --filter \"./crates/*\" watch",
    "dev": "bun run --cwd ./examples dev",
    "dev:watch": "bun run --cwd ./examples dev:watch",
    "release": "sh scripts/release.sh",
    "sync-version": "bun run --filter \"./crates/*\" sync-version",
    "reset-node-modules": "rm -f ./bun.lock && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && bun i"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "@changesets/cli": "^2.29.4",
    "typescript": "^5.8.3"
  }
}
